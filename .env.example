# LocaNext / LocalizationTools - Environment Configuration Example
# Copy this file to .env and customize for your environment
#
# IMPORTANT: Never commit .env to version control!
# The .env file is already in .gitignore

# ============================================
# REQUIRED FOR PRODUCTION (Security Critical)
# ============================================

# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-256-bit-secret-key-here-CHANGE-THIS

# ============================================
# IP RANGE FILTERING (Internal Enterprise Security)
# ============================================
# Restrict access to specific IP ranges only
# Uses CIDR notation - examples:
#   192.168.11.0/24     -> 192.168.11.1 - 192.168.11.254 (whole subnet)
#   10.10.11.0/24       -> 10.10.11.1 - 10.10.11.254
#   192.168.11.50/32    -> Single IP only
#
# Multiple ranges (comma-separated):
#   192.168.11.0/24,192.168.12.0/24,10.0.0.0/8
#
# If not set, all IPs are allowed (development mode)
ALLOWED_IP_RANGE=192.168.11.0/24

# Always allow localhost even when IP filter is enabled (for development)
IP_FILTER_ALLOW_LOCALHOST=true

# Log blocked IP attempts (security monitoring)
IP_FILTER_LOG_BLOCKED=true

# ============================================
# CORS ORIGIN RESTRICTIONS
# ============================================
# Comma-separated list of allowed origins (NO spaces)
# Example for company network: http://192.168.11.100:5173,http://192.168.11.101:5173
CORS_ORIGINS=http://192.168.11.100:5173,http://192.168.11.100:5175

# ============================================
# RECOMMENDED FOR PRODUCTION
# ============================================

# Network binding (use 127.0.0.1 with reverse proxy for security)
SERVER_HOST=127.0.0.1
SERVER_PORT=8888

# Database (PostgreSQL recommended for production)
DATABASE_TYPE=postgresql
POSTGRES_USER=localization_admin
POSTGRES_PASSWORD=your-strong-database-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=localizationtools

# JWT Token settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key for client-server communication
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(48))"
API_KEY=your-384-bit-api-key-here-CHANGE-THIS

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# CORS detailed settings (defaults shown)
# CORS_ALLOW_CREDENTIALS=true
# CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Request-ID

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO

# API Documentation (disable in production for security)
# ENABLE_DOCS=false

# Debug mode (NEVER enable in production)
DEBUG=false

# Data retention (days)
LOG_RETENTION_DAYS=90
SESSION_RETENTION_DAYS=30
ERROR_LOG_RETENTION_DAYS=180

# ============================================
# CENTRAL SERVER / TELEMETRY (Priority 12.5)
# ============================================
# For Desktop apps to send telemetry to Central Server
# Set this on DESKTOP apps to point to your Central Server

# Central Server URL (Desktop app sends logs here)
# Example: CENTRAL_SERVER_URL=http://192.168.11.100:9999
# CENTRAL_SERVER_URL=

# Enable/disable telemetry sending from Desktop app
TELEMETRY_ENABLED=true

# Heartbeat interval (seconds) - how often Desktop pings Central
TELEMETRY_HEARTBEAT_INTERVAL=300

# Retry interval when Central is unavailable (seconds)
TELEMETRY_RETRY_INTERVAL=60

# Max logs to queue when Central is unavailable
TELEMETRY_MAX_QUEUE_SIZE=1000

# ============================================
# MONITORING (Optional)
# ============================================

# Sentry error tracking
# SENTRY_DSN=https://your-sentry-dsn

# ============================================
# EMAIL NOTIFICATIONS (Future Feature)
# ============================================

# SMTP_HOST=smtp.company.com
# SMTP_PORT=587
# SMTP_USER=notifications@company.com
# SMTP_PASSWORD=your-smtp-password
