{
  "name": "locanext",
  "version": "25.1214.2330",
  "description": "LocaNext - Professional Desktop Platform for Localization Tools",
  "main": "electron/bootstrap.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:svelte\" \"npm run dev:electron\"",
    "dev:svelte": "vite dev",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build && node scripts/fix-electron-paths.js",
    "build:electron": "electron-builder --publish never",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report"
  },
  "keywords": [
    "localization",
    "translation",
    "desktop",
    "electron",
    "svelte"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.0.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.0",
    "svelte": "^5.0.0",
    "vite": "^7.0.0",
    "wait-on": "^9.0.0"
  },
  "dependencies": {
    "carbon-components-svelte": "^0.95.0",
    "carbon-icons-svelte": "^13.0.0",
    "electron-updater": "^6.6.2",
    "socket.io-client": "^4.6.0"
  },
  "build": {
    "appId": "com.locanext.app",
    "productName": "LocaNext",
    "forceCodeSigning": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../tools/python",
        "to": "tools/python",
        "filter": ["**/*"]
      },
      {
        "from": "../server",
        "to": "server",
        "filter": ["**/*.py", "**/*.json", "**/*.txt", "**/*.md", "!**/__pycache__/**", "!**/*.pyc", "!**/*.pyo"]
      },
      {
        "from": "../tools",
        "to": "tools",
        "filter": ["*.bat", "*.py"]
      },
      {
        "from": "../version.py",
        "to": "version.py"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LocaNext",
      "uninstallDisplayName": "LocaNext",
      "license": "../LICENSE"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "NeilVibe",
      "repo": "LocalizationTools",
      "releaseType": "release"
    }
  }
}
