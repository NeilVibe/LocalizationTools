{
  "name": "locanext",
  "version": "1.0.0",
  "description": "LocaNext - Professional Desktop Platform for Localization Tools",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:svelte\" \"npm run dev:electron\"",
    "dev:svelte": "vite dev",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "localization",
    "translation",
    "desktop",
    "electron",
    "svelte"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "svelte": "^4.2.8",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "carbon-components-svelte": "^0.85.0",
    "carbon-icons-svelte": "^12.8.0",
    "electron-updater": "^6.6.2",
    "socket.io-client": "^4.6.0"
  },
  "build": {
    "appId": "com.locanext.app",
    "productName": "LocaNext",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "publish": null
  }
}
